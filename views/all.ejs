<!DOCTYPE html>
<html lang="en">
<head>
   
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
        <link rel="icon" href="https://images.vexels.com/media/users/3/137028/isolated/preview/52f6a83cbfc0e6a006a7222efdeb9752-turkey-standing-silhouette-by-vexels.png">   
        <link rel="stylesheet" href="stylesheets/style.css">   
        
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
      
    
        <title>Gobbler</title>

</head>
<body>
    <nav>
        <div class="nav-wrapper red darken-4">
          <a href="/gobbles" class="brand-logo center">Gobbler</a>
          <ul class="right hide-on-med-and-down">
            <% if (users) { %>
            <li >
              <a href="/gobbles/all" class="left-align">See All Gobbles</a>
            </li>
            <li class="nav-item">
                <a href="/logout">Logout</a>
                <% } else { %>
                  <a href="/auth/twitter">Login with twitter</a>
                  <% } %>
                </li>
          </ul>
        </div>
      </nav>

    <div class="container">
            <div class="row valign-wrapper">
              <div class="col s12 valign">
                <div class="card ">
                  <div class="card-content">
                    <span class="card-title center-align ">
                     <h4>
                            All Gobbles
                     </h4>   
                    </span>
                    
                    <% users.forEach(function(i) { %>
                        <ul>
                            <li>
                                <img src=<%= i.avatar %> class="circle" ><strong style="font-size:20px">&nbsp;|&nbsp;<%= i.displayName %></strong><br>
                                <% i.gobbles.forEach(function(gobble) { %>
                                    <ul>
                                        <li style="font-size:18px"><%= gobble.content %><br></li>
                                    </ul>
                                <% }) %>
                            </li>
                            <hr>
                        </ul>
                    <% }) %>

                  </div>
                </div>
              </div>
            </div>
          </div>



          <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
          <script src="javascripts/app.js"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
          <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
          <script type="text/javascript" src="js/materialize.min.js"></script>
          <script>
            $('#textarea1').val('New Text');
            $('#textarea1').trigger('autoresize');
          </script>



</body>
</html>